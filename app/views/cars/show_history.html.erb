<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-6">
		<div class="nav">
		<div class="navbar-nav navbar-left" style="margin-bottom: 10px;">
			<input type="text" class="form-control" placeholder="Search ..." aria-describedby="sizing-addon1">
		</div>
  	</div>

	  <div class="panel panel-default">
			<table class="table table-striped table-hover">
				<th style="width: 30%"> ផ្លាកលេខ </th>
				<th style="width: 30%"> ថ្ងៃចូល </th>
				<th style="width: 20%"> </th>

				<% @car_history.each do |his| %>
					<tr>
						<td> <%= his.car.plate_number %> </td>
						<td> <%= his.created_at.strftime("%m/%d/%Y") %> </td>
						<td>
							<div>
								<span style = "margin-right: 5px;">
									<%= link_to "", car_show_invoice_path(his, :format => 'pdf'), class: "glyphicon glyphicon-zoom-in" %>
								</span>
							</div>
						</td>
					</tr>
				<% end %>	
			</table>
		</div>
		<div style="margin-top: -25px;">
			<%= will_paginate @car_history, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>